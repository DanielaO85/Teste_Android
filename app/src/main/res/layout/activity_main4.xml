<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/inputReal"
        android:layout_width="306dp"
        android:layout_height="112dp"
        android:background="@android:drawable/edit_text"
        android:hint="Digite o valor em Reais"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="116dp" />

    <Button
        android:id="@+id/converte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputReal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Converter para DÃ³lar"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/material_dynamic_neutral10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputReal" />

    <TextView
        android:id="@+id/outputDollar"
        android:layout_width="218dp"
        android:layout_height="137dp"
        android:layout_below="@id/converte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/material_dynamic_neutral10"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/converte" />
</androidx.constraintlayout.widget.ConstraintLayout>

